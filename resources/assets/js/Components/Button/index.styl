.button_theme_simple
  font-family inherit
  font-size 100%
  line-height 100%
  display inline-block
  margin 0
  padding .2em 1em
  text-align center
  border 1px solid rgba(0, 0, 0, .3)
  outline 0
  border-radius 3px
  color #000
  background #fff

.button_theme_simple.button_type_link
  text-decoration none
