{
  "name": "grammar_review_tool",
  "version": "0.0.0-semantically-released",
  "description": "Tool for review formal grammars in Lemon format.",
  "private": true,
  "scripts": {
    "test": "mocha --opts ./mocha.opts src/js/**/*.spec.js",
    "cover": "nyc --exclude=src/js/**/*.spec.js --exclude=src/js/parser/** --reporter=lcov --reporter=text npm t",
    "check-coverage": "nyc check-coverage --statements 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | node_modules/codecov.io/bin/codecov.io.js",
    "lint": "eslint --ext .js .",
    "semantic-release": "semantic-release pre && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/melihovv/grammar_review_tool.git"
  },
  "keywords": [
    "grammar",
    "lemon",
    "review"
  ],
  "author": "Alexander Melihov <amelihovv@ya.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/melihovv/grammar_review_tool/issues"
  },
  "homepage": "https://github.com/melihovv/grammar_review_tool",
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-2": "^6.11.0",
    "babel-register": "^6.11.6",
    "browser-sync": "^2.14.0",
    "codecov.io": "^0.1.6",
    "commitizen": "^2.8.2",
    "css-loader": "^0.23.1",
    "cz-conventional-changelog": "^1.1.6",
    "del": "^2.2.1",
    "eslint": "^3.2.2",
    "eslint-config-standard": "^5.3.5",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "ghooks": "^1.3.2",
    "glob": "^7.0.5",
    "gulp": "gulpjs/gulp#4.0",
    "gulplog": "^1.0.0",
    "mocha": "^2.5.3",
    "must": "^0.13.1",
    "nyc": "^7.0.0",
    "raw-loader": "^0.5.1",
    "semantic-release": "^4.3.5",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.1.2",
    "validate-commit-msg": "^2.6.1",
    "webpack": "^1.13.1",
    "webpack-manifest-plugin": "^1.0.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run cover && npm run check-coverage && npm run lint"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": "transform-runtime",
    "comments": false
  },
  "dependencies": {
    "antlr4": "^4.5.3",
    "babel-runtime": "^6.11.6"
  }
}
